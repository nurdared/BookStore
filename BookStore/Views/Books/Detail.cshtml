@model BookStore.Models.Book

@{
    ViewData["Title"] = "Detail";
}



<hr/>
<div class="w-100 mt-4">
    <div class="row ">
        <div class="col-3">
            <img src="@Html.DisplayFor(model => model.ImageUrl)" class="img img-fluid rounded" alt="">
            <div>
                <a class="btn btn-dark mt-xl-5" href="javascript:history.go(-1)">Back to List</a>
            </div>
        </div>
        <div class="col-9">
            <h2 class="font-weight-bold">@Html.DisplayFor(model => model.BookName)</h2>
            <dl class="row mt-lg-5">
                <dt class="col-sm-3 h5 font-weight-bold">
                    @Html.DisplayNameFor(model => model.BookAuthor):
                </dt>
                <dd class="col-sm-9 h5">
                    @Html.DisplayFor(model => model.BookAuthor)
                </dd>
                <dt class="col-sm-3 h5 font-weight-bold">
                    @Html.DisplayNameFor(model => model.BookYear):
                </dt>
                <dd class="col-sm-9 h5">
                    @Html.DisplayFor(model => model.BookYear)
                </dd>
                <dt class="col-sm-3 h5 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Category):
                </dt>
                <dd class="col-sm-9 h5">
                    @Html.DisplayFor(model => model.Category.CategoryName)
                </dd>
                <dt class="col-sm-3 h5 font-weight-bold">
                    Book Description:
                </dt>
                <dd class="col-sm-9 h5 mb-4">
                    @Html.DisplayFor(model => model.BookDesc)
                </dd>
                <dt class="col-sm-3 mt-lg-5">
                    <a class="btn btn-success btn-md mt-2" id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-bookId="@Model.ID"><i class="fa fa-shopping-cart"></i> Add to Cart</a>
                </dt>
                <dd class="col-sm-9 font-weight-bold h3 mt-lg-5">
                    @Html.DisplayFor(model => model.BookPrice)
                </dd>

            </dl>
        </div>
    </div>
</div>



