@model BookStore.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-3">Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Genre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
    </dl>
</div>
<div class="mt-5">
    <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-info">Edit</a>
    <a asp-action="Index" class="btn btn-dark">Back to List</a>
</div>
