@model IEnumerable<BookStore.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-3">Book Genres</h1>

<p class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Genre
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a class="btn btn-sm btn-outline-info" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a>
                <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.CategoryId">Details</a>
                <a class="btn btn-sm btn-outline-info" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
