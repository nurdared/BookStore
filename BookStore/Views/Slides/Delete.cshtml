@model BookStore.Models.Slide

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-3">Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Slide Image</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Slide Image
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.SlideUrl)" class="img img-fluid rounded" style="width: 400px" alt="">
        </dd>
        <dt class = "col-sm-2">
            Slide Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SlideBlobRef)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="mt-5">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-dark">Back to List</a>
    </form>
</div>
