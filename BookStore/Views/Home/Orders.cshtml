@model IEnumerable<BookStore.Models.OrderDetail>

@{
    ViewData["Title"] = "Orders";
}

<h1 class="mb-3">My Orders</h1>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th class="h5">
                Image
            </th>
            <th class="h5">
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th class="h5">
                Price
            </th>
            <th class="h5">
                Quantity
            </th>
            <th class="h5">
                Paid Amount
            </th>
            <th class="h5">
                Order Placed Date
            </th>

        </tr>
    </thead>
    <tbody>
        @{
            bool found = false;
            foreach (var item in Model)
            {
                if (item != null)
                {
                    found = true;
                    <tr>
                        <td>
                            <img src="@Html.DisplayFor(model => item.Book.ImageUrl)" class="img img-fluid rounded" style="width: 100px" alt="">
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Book.BookName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Book.BookPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td class="font-weight-bold">
                            @((item.Price * item.Amount).ToString("c"))
                        </td>


                        <td>
                            @Html.DisplayFor(modelItem => item.Order.OrderPlaced)
                        </td>

                    </tr>
                }

            }
            if (!found)
            {
                <h5>No Books Ordered, Place the Order!</h5>
            }

        }

    </tbody>
</table>
