
@model Book

<div class="mb-2 col-md-3">
    <div class="card mb-4 text-white bg-dark">
        <img class="card-img-top" style="width: 100%" src="@Html.DisplayFor(modelItem => Model.ImageUrl)" alt="Card image cap">
        <div class="card-body">
            <a href="/Books/List/Detail/@Model.ID" class="text-white"><h5 class="card-title" style="height: 70px">@Html.DisplayFor(modelItem => Model.BookName)</h5></a>
            <a class="btn btn-success btn-md mt-2" id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-bookId="@Model.ID"><i class="fa fa-shopping-cart"></i> Add to Cart</a>
            <h5 class="mt-3 float-right">@Html.DisplayFor(modelItem => Model.BookPrice)</h5>


        </div>
    </div>
</div>

